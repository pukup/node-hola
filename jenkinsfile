pipeline {
    agent {
      docker {
        image 'node:lts-alpine3.10' 
        args '-p 3000:3000 -u root:root'
      }
    }
    stages {
      stage('Clone') {
        steps {
          sh 'rm -r node-hola-deploy'
          sh 'apk add --no-cache git'
          sh 'git clone https://github.com/raulortegar/node-hola'
        }
      }
      stage('NPM install') { 
        steps {
          dir("node-hola-deploy") {
              sh "npm install"
          }
        }
      }
      stage('Check tests') {
        steps {
          dir("node-hola-deploy") {
            sh "npm run test"
          }
        }
      }
    }
}
